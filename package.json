{
  "name": "cs2-coach-mcp-server",
  "version": "1.0.0",
  "description": "Statistical CS2 coaching assistant with optional AI - deployable anywhere",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "cs2-coach": "dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "echo Build complete - commands and data embedded for edge deployment",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "start:http": "node dist/http-server-standalone.js",
    "lint": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --threshold=85",
    "test:integration": "jest --config jest.integration.config.js",
    "test:mcp-compliance": "npm run build && node scripts/test-mcp-compliance.js",
    "test:ollama-health": "node scripts/test-ollama-health.js",
    "deploy:workers": "npm run build && npx wrangler deploy",
    "deploy:vercel": "npm run build && vercel --prod", 
    "verify:deployment": "node scripts/verify-deployment-ready.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "counter-strike",
    "cs2",
    "statistical-analysis",
    "coaching",
    "mcp",
    "serverless",
    "cloudflare-workers", 
    "leetify",
    "gaming",
    "typescript"
  ],
  "author": "CS2 Coach Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "dotenv": "^16.3.1",
    "node-fetch": "^2.7.0",
    "ollama": "^0.5.8",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
